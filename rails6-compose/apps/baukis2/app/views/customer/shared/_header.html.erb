<header>
  <%# <span class="logo-mark">BAUKIS2</span> %>
  <%= link_to "BAUKIS2", :customer_root, class: "logo-mark" %>
  <%# <span class="notice">職員アカウントを更新しました。</span> %>
  <%= content_tag(:span, flash.notice, class: "notice") if flash.notice %>
  <%= content_tag(:span, flash.alert, class: "alert") if flash.alert %>
  <%=
    if current_customer
      link_to "ログアウト", :customer_session, method: :delete
    else
      link_to "ログイン", :customer_login
    end
  %>
  <%= link_to "アカウント", :customer_account if current_customer %>
</header>